<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dip">

    <TextView
        android:id="@+id/tvPostTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivPostPhoto"
        android:layout_toRightOf="@+id/ivPostPhoto"
        android:text="Title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAwesomeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvPostTitle"
        android:gravity="right"
        android:singleLine="true"
        android:text="205" />

    <TextView
        android:id="@+id/tvPostDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPostTitle"
        android:layout_toEndOf="@+id/ivPostPhoto"
        android:layout_toRightOf="@+id/ivPostPhoto"
        android:autoLink="all"
        android:linksClickable="true"
        android:text="Description" />

    <ImageView
        android:id="@+id/ivPostPhoto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_marginRight="5dp" />

</RelativeLayout>