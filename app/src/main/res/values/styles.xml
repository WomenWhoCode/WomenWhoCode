<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!-- =============================================================== -->
    <!-- Toolbar Styles - Stays Consistent -->
    <!-- =============================================================== -->

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- This would set the toolbar's background color -->
        <item name="android:background">@color/blackish</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- android:actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/white</item>
        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
        <item name="android:titleTextStyle">@style/Toolbar.TitleText</item>
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_detail_title_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
    </style>

    <!-- =============================================================== -->
    <!-- Item, Dialog, Activity Styles - Stays Consistent -->
    <!-- =============================================================== -->

    <style name="TextView.TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_large_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
    </style>

    <style name="TextView.DetailTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_large_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
    </style>

    <style name="TextView.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_subheader_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
    </style>

    <style name="TextView.RelativeDate" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.DetailDescription" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_details</item>
    </style>

    <style name="FollowButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/follow_button</item>
        <item name="android:textAppearance">@style/HeaderTextDefault</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">@dimen/button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>
        <item name="android:background">@drawable/follow_button</item>
    </style>

    <!-- TODO: this "could" switch based on theme -->
